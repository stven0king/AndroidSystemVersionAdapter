<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/testFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试访问File API"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/testToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Toast"/>
    <Button
        android:id="@+id/testLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请定位权限"/>
    <Button
        android:id="@+id/testForegroundLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请前台定位权限"/>
    <Button
        android:id="@+id/testBackgroundLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请后台定位权限"/>
</LinearLayout>